{% extends 'base.html.twig' %}

{% block body %}
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="{{ asset('img/tent.jpg') }}" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="{{ asset('img/act/laugh_resized.jpg') }}" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="{{ asset('img/act/dream_resized.jpg') }}" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="{{ asset('img/act/marvel_resized.jpg') }}" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="{{ asset('img/ticket_resized.jpg') }}" class="d-block w-100" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="jumbotron">
        <h1 class="display-3">Welcome!</h1>
        <p class="lead">The Wild Circus is unlike any other show you've seen before.</p>
        <p>We strive to perform with a minimum impact on our environment, and with respect to all living beings.</p>
        <p class="lead">
            <a class="btn btn-primary btn-lg" href="{{ path('about_us') }}" role="button">Learn more</a>
        </p>
        <hr class="my-4">
        <p>We perform all around the world! There's always a chance that we'll be coming near you.</p>
        <p class="lead">
            <a class="btn btn-primary btn-lg" href="{{ path('event_all') }}" role="button">Coming events</a>
        </p>
        <hr class="my-4">
        <p>Your life will never be the same after seeing our show. Don't miss your chance! </p>
        <p class="lead">
            <a class="btn btn-primary btn-lg" href="#" role="button">Book now</a>
        </p>
    </div>

{% endblock %}