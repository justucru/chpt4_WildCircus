{% extends 'base.html.twig' %}

{% block title %}Our Acts{% endblock %}

{% block body %}
    <div class="gallery acts">
        <h1>Our Acts</h1>
        <p class="intro">bla bla bla blabla bla bla blabla bla bla bla
            bla bla bla blabla bla bla blabla bla bla bla
            bla bla bla blabla bla bla bla
        </p>
        {% for act in acts %}
            <div class="card text-white bg-dark mb-3" style="max-width: 20rem;">
                <div class="card-header">{{ act.duration }} min</div>
                <div class="card-body">
                    <h4 class="card-title">{{ act.name }}</h4>
                    <img src="{{ asset('{{ act.picture }}') }}">
                    <p class="card-text">{{ act.description }}</p>
                    <p>Associated performers :</p>
                    <ul>
                        {% for performer in act.performers %}
                            <a href="#"<li>{{ performer.name }}</li></a>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}